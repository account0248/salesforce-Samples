<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DisasterCodeUpdateValidation</fullName>
    <active>true</active>
    <description>災害コード（項目）が更新された場合に、エラーメッセージを表示する。</description>
    <errorConditionFormula>ISCHANGED( DisasterCode__c )</errorConditionFormula>
    <errorDisplayField>DisasterCode__c</errorDisplayField>
    <errorMessage>災害コードは変更できません。</errorMessage>
</ValidationRule>
